{
    "manifest_version": 2,
    "name": "Bulb",
    "version": "0.1",
    "description": "Bulb downloader",

    "icons": { "24": "icon.svg" },

    "permissions": [
        "storage",
        "downloads",
        "webRequest",
        "http://*/*",
        "https://*/*"
    ],

    "background": {
        "scripts": [ "download.js" ],
        "persistent": true
    },

    "content_scripts": [{
        "matches": [ "*://www.pornhub.com/*" ],
        "js":      [ "injections/inject.js"  ],
        "css":     [ "injections/inject.css" ],
        "run_at": "document_start"
    }]
}